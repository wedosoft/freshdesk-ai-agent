{
  "platform-version": "3.0",
  "modules": {
    "support_ticket": {
      "location": {
        "ticket_sidebar": {
          "url": "index.html",
          "icon": "styles/images/icon.svg"
        },
        "ticket_top_navigation": {
          "url": "index.html",
          "icon": "styles/images/icon.svg"
        }
      }
    }
  },
  "engines": {
    "node": "18.18.0",
    "fdk": "9.1.0"
  },
  "name": "AI Buddy",
  "description": "AI-powered ticket assistant for Freshdesk agents",
  "version": "1.0.0",
  "author": {
    "name": "Your Company",
    "email": "support@yourcompany.com",
    "url": "https://yourcompany.com"
  },
  "defaultLocale": "ko",
  "private": true,
  "allowed-domains": [
    "*.execute-api.ap-northeast-2.amazonaws.com",
    "api.anthropic.com",
    "api.openai.com"
  ],
  "features": {
    "serverless": true
  },
  "requirements": {
    "subdomain": "all"
  },
  "supported-languages": [
    "ko",
    "en"
  ],
  "interfaces": {
    "dialog": {
      "methods": {
        "showModal": true
      }
    },
    "instance": {
      "methods": {
        "context": true,
        "send": true,
        "receive": true
      }
    },
    "interface": {
      "methods": {
        "trigger": true,
        "hide": true,
        "show": true
      }
    }
  }
}
